<% content_for :title do %>
    <%= t('.sales_products_report') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-file-text"></i> <%= t('.sales_products_report') %>
<% end %>

<% content_for :page_toolbar do %>
    <div class="btn-group">
        <div class="clearfix">
        </div>
    </div>
<% end %>

<%= erp_datalist(
    url: erp_reports.backend_product_sales_products_list_path,
    filters: [
        {
            text: t('.chart'), name: '', value: true, checked: false
        },
        {
            text: t('.report'), name: '', value: true, checked: false
        },
        {
            divider: true
        },
        {
            text: t('.period'), name: '', value: '', checked: false
        },
        {
            text: t('.profit'), name: '', value: '', checked: false
        },
        {
            text: t('.invoice_discount'), name: '', value: '', checked: false
        },
        {
            text: t('.refund'), name: '', value: '', checked: false
        },
        {
            text: t('.sold_by'), name: '', value: '', checked: false
        }
    ],
    columns: [
        {
            text: t('.product_code'), name: 'product_code', value: true, checked: true
        },
        {
            text: t('.product_name'), name: 'product_name', value: true, checked: true
        },
        {
            text: t('.sales_quantity'), name: 'sales_quantity', value: true, checked: true
        },
        {
            text: t('.price'), name: 'price', value: true, checked: true
        },
        {
            text: t('.total_amount'), name: 'total_amount', value: true, checked: true
        },
        {
            text: t('.tienchenhlech'), name: 'tienchenhlech', value: true, checked: true
        },
        {
            text: t('.return_quantity'), name: 'return_quantity', value: true, checked: true
        },
        {
            text: t('.return_cost'), name: 'return_cost', value: true, checked: true
        },
        {
            text: t('.net_revenue'), name: 'net_revenue', value: true, checked: true
        }
    ]
) %>